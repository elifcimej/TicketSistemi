@model List<TicketSistemi.Models.Ticket>

@{
    ViewData["Title"] = "Personel Paneli";
}

<div class="container py-5">
    <h2 class="mb-4">Personel Paneli — Atanan Ticketlarım</h2>

    <table class="table table-hover table-bordered align-middle bg-white shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Önem</th>
                <th>Durum</th>
                <th>Oluşturulma</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <span class="badge bg-warning text-dark">@item.Priority</span>
                    </td>
                    <td>
                        @if (item.Status.ToString() == "Tamamlandı")
                        {
                            <span class="badge bg-success">Tamamlandı</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@item.Status</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToShortDateString()</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-info">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
