@model List<TicketSistemi.Models.Ticket>
@{
    ViewData["Title"] = "Ticket Listesi";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">Müşteri Paneli</h2>
    <div class="mb-3 text-end">
        <a href="/Ticket/Create" class="btn btn-success mb-2">+ Yeni Ticket Aç</a>
    </div>
    <table class="table table-hover table-bordered rounded shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Önem</th>
                <th>Durum</th>
                <th>Oluşturulma</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <span class="badge @(item.Priority == "Yüksek" ? "bg-danger" : (item.Priority == "Orta" ? "bg-warning text-dark" : "bg-success"))">
                            @item.Priority
                        </span>
                    </td>
                    <td>
                        <span class="badge bg-secondary">@item.Status</span>
                    </td>
                    <td>@item.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
